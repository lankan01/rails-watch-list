<div class="container">
  <br><br> <br><br> <br><br> <br><br>
  <div class="d-flex justify-content-between">
    <h1><%= @list.name %></h1>
    <%= link_to 'Create a bookmark', new_list_bookmark_path(@list), class: "btn btn-secondary"  %>

  </div>

  <br>

    <div>
    <% @list.movies.each do |movie| %>
      <h1><%= movie.title %></h1>
      <% movie.bookmarks.each do |bookmark| %>
        <%= bookmark.comment %> &nbsp; | &nbsp; <%= link_to "Delete",
                            bookmark_path(bookmark),
                            data: {
                              "turbo-method": :delete,
                              confirm: "Are you sure?" } %>
        <br>
      <% end %>
    <% end %>
  </div>

  <div class="delete">
    <%= button_to "Delete list",
                          list_path(@list),
                          method: :delete,
                          data: { confirm: "Are you sure?" }, class: "btn btn-secondary" %>
  </div>
</div>
