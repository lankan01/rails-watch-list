<div class="container">
  <div class="d-flex justify-content-between">
    <h1><%= @list.name %></h1>
    <%= link_to 'Add a movie', new_movie_path(@movie), class: "btn btn-primary"  %>
  </div>

  <br>

  <div>
    <% @list.movies.each do |movie| %>
      <h1><%= movie.title %></h1>
      <% movie.bookmarks.each do |bookmark| %>
        <%= bookmark.comment %> &nbsp; | &nbsp; <%= link_to "Delete",
                            bookmark_path(bookmark),
                            data: {
                              turbo-method: :delete,
                              confirm: "Are you sure?" } %>
        <br>
      <% end %>
    <% end %>
  </div>

  <div class="movie-cards">
    <div class="list-text d-flex justify-content-between">
      <h3>My Bookmarks</h3>
      <%= link_to 'Create a bookmark', new_list_bookmark_path(@list), class: "btn btn-secondary"  %>
    </div>

    <br>

    <div class="movie-card">
        <% @bookmarks.each do |bookmark| %>
          <div class="list-group-item card">
            <%# <%= image_tag bookmark.movie.poster_url, class:"poster-img" %>
            <div class="movie-card-text">
              <h4><strong><%= bookmark.movie.title %> - <%= bookmark.movie.rating %><i class="fas fa-star star-yellow"></i></strong></h4>
              <p><%= bookmark.movie.overview %></p>
              <h4><em>"<%= bookmark.comment %>"</em></h4>
            </div>


            <div class="show-delete">
              <%= link_to "See more", movie_path(bookmark.movie) %>
              <%= link_to "Remove bookmark from list",
                            bookmark_path(@list), # this aint right..
                            method: :delete,
                            data: { confirm: "Are you sure?" } %>
            </div>

          </div>
        <% end %>
    </div>
  </div>
  <div class="delete">
    <%= button_to "Delete list",
                          list_path(@list),
                          method: :delete,
                          data: { confirm: "Are you sure?" }, class: "btn btn-secondary" %>
  </div>
</div>
